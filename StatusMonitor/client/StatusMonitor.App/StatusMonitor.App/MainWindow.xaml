<Window x:Class="StatusMonitor.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatusMonitor.App"
        xmlns:p="clr-namespace:StatusMonitor.App.Properties"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.Title}" Height="600" Width="400" MinWidth="400" MaxWidth="400">
    <StackPanel Margin="5">
        <TabControl>
            <TabItem Header="{x:Static p:Resources.Tab_General}">

            </TabItem>
            <TabItem Header="{x:Static p:Resources.Tab_TeamCity}">
                <StackPanel>
                    <Grid>
                        <Label Name="lblTcUsername" Content="{x:Static p:Resources.Teamcity_Username}"></Label>
                        <TextBox Name="txtTcUsername"/>
                    </Grid>
                    <Grid>
                        <Label Name="lblTcPassword" Content="{x:Static p:Resources.Teamcity_Password}"></Label>
                        <PasswordBox Name="pwTcPassword"/>
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </StackPanel>
</Window>
